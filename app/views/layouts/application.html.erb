<!DOCTYPE html>
<html>
  <head>
    <title>Testapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-default">
        <% if user_signed_in? %>
          <%= link_to "質問一覧", questions_path %>
          <%= link_to "質問する", new_question_path %>
          <%= link_to "連想ワード検索", search_path %>
          <%= link_to "マイページ", user_path(current_user.id) %>
          <% if current_user.try(:admin?) %>
            <%= link_to "管理者画面", rails_admin_path %>
          <% end %>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
        <% else %>
          <%= link_to "ログイン", new_user_session_path %>
          <%= link_to "新規登録", new_user_registration_path %>
          <%= link_to '一般ゲストログイン', users_guest_sign_in_path, method: :post %>
          <%= link_to '管理者ゲストログイン', users_guest_admin_sign_in_path, method: :post %>
        <% end %>
      </nav>
    </header>

    <% if notice %>
    <p class="alert alert-notice"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-error"><%= alert %></p>
  <% end %>
    <%= yield %>
  </body>
</html>
