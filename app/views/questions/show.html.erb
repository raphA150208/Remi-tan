<div class="container">
  <div class="question-text">
    <p>
      <strong>質問内容</strong>
      <%= @question.content %>
    </p>

    <p>
      <strong>前後の文脈</strong>
      <%= @question.sentence %>
    </p>

    <p>
      <strong>連想ワード</strong>
      <% @question.reminiscent_words.each do |reminiscent_word| %>
        <tr class="reiniscent_words_list">
          <td class="reminiscent_words_row"><%= reminiscent_word.keyword %></td>
        </tr>
      <% end %>
    </p>

    <p>
      <strong>Status:</strong>
      <%= @question.status %>
    </p>
  </div>
  <p>回答一覧</p>
  <!-- このcomments_areaというHTMLのidを取得して、そのdivの部分だけを更新する -->
  <div id="answers_area">
    <!-- 投稿されたコメント一覧をブログの詳細ページに表示するためのrender -->
    <%= render partial: 'answers/index', locals: { answers: @answers, question: @question } %>
  </div>
  <!-- コメント入力欄をブログの詳細ページに表示するためのrender -->
  <%= render partial: 'answers/form', locals: { answer: @answer, question: @question } %>
  <%= link_to 'Edit', edit_question_path(@question) %> |
  <%= link_to 'Back', questions_path %>
</div>