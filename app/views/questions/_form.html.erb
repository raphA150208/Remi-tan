<%= form_with(model: question, local: true) do |form| %>
  <% if question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(question.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
      <% question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field question-content">
    <%= form.label "質問内容" %>
    <%= form.text_area :content, size: "60x10" %>
  </div>

  <div class="field question-content">
    <%= form.label "前後の文脈" %>
    <%= form.text_area :sentence, size: "60x10" %>
  </div>

  <div class="field">
    <%= form.fields_for :reminiscent_words do |w| %>
      <%= render "reminiscent_word_fields", f: w %>
    <% end %>
    <div class="links">
        <%= link_to_add_association "連想ワードを追加", form, :reminiscent_words %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit "質問を投稿する" %>
  </div>
<% end %>

<style>
.main-content{
  margin: 150px auto 0;
   width: 80%;
}
input[type="text"] {
   height: 30px;
   margin-bottom: 20px;
   width: 400px;
}

input[type="submit"]{
  height: 30px;
  width: 300px;
  background-color: #4a4a4a;
  color: #ffffff;
  cursor: pointer;
}
div.question-content{
  margin-bottom: 50px;
}
.question-content label{
  font-size: 1.5em;
  font-weight: bold;
  margin-bottom: 5px;
}
