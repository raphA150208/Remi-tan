document.addEventListener('turbolinks:load', function() {
  console.log('ページがロードされました。イベントリスナーを設定中...');

  document.querySelectorAll('.edit_answer_button').forEach(function(button) {
    console.log('イベントリスナーを設定します: ', button);
    button.addEventListener('click', function() {
      console.log('ボタンがクリックされました。');
      var formToHide = document.getElementById("answer_form_new");
      if (formToHide) {
        console.log('フォームを非表示にします。');
        formToHide.style.display = 'none';
      } else {
        console.log('非表示にすべきフォームが見つかりません。');
      }
    });
  });
});
